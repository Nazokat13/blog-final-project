<main class="mx-auto" style="width: 800px;">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-sm-6">
                <h1 class="jumbotron-heading">Edit Post</h1>

                <form action="/posts/{{post._id}}/edit" method="POST">
                    <div class="form-group">
                        <label for="title">Blog Title</label>
                        <input type="text" class="form-control" id="title" name="title" required value="{{post.title}}">
                    </div>

                    <br>

                    <div class="form-group">
                        <label for="content">Blog Content</label>
                        <textarea class="form-control" id="content" name="content" rows="3" required>{{post.content}}</textarea>
                    </div>

                    <br>

                    <button type="submit" class="btn btn-primary">Update Post</button>
                    <a class="btn btn-secondary pull-right" href="/">Back to Home</a>
                </form>

            </div>
        </div>
    </div>
</main>

