<main class="container">

	<div class="container">
		<h1 class="jumbotron-heading">Welcome to My Travel Blog!</h1>
		<p class="lead text-muted">Something short and leading about the collection belowâ€”its contents, the creator,
			etc.
			Make it short and sweet, but not too short so folks don't simply skip over it entirely.</p>
		<p>
			<a href="/posts/new" class="btn btn-primary my-2">Add New Post</a>
		</p>
	</div>

	<!-- #region Posts -->
	{{#each posts}}
	<div class="bg-body-tertiary p-5 rounded mt-3">
		<h1>Title: {{this.title}}</h1>
		<h4>Post Id:{{this._id}}</h4>
		<br>
		<p class="lead" style="background-color: #A6A6A6; opacity:0.5">{{this.content}}</p>
		<form action="/delete" method="POST">
			<input type="hidden" name="id" value="{{this._id}}">
			<button class="btn btn-lg btn-danger text-right">Delete</button>
		</form>
		<a href="/posts/{{this._id}}/edit" class="btn btn-lg btn-warning text-right">Update</a>
	</div>
	{{else}}
	<p class="lead text-muted">
		No posts available right now...
	</p>
	{{/each}}
	<!-- #endregion -->

</main>